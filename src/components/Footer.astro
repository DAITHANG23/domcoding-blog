---
import SocialContact from "./SocialContact.astro";

const today = new Date();
---

<div class="bg-background text-primary-text flex w-full bg-gray-300 p-8 text-center dark:bg-black">
  <div
    class="mx-auto my-0 grid w-full grid-cols-1 flex-col items-center justify-center gap-8 md:w-[90%] md:grid-cols-[repeat(3,1fr)]"
  >
    <div class="flex flex-col items-center justify-center md:items-start">
      <h2 class="m-0 text-[32px] dark:text-white">
        Thang(Dom) <span class="text-primary">Nguyen</span>
      </h2>
      <p class="m-0 pt-2 text-center text-base md:text-start">
        Looking forward to growing as a Full-Stack Developer!
      </p>
    </div>
    <div class="flex items-center justify-center"><SocialContact background /></div>
    <p>&copy; {today.getFullYear()} DomCoding. All rights reserved.</p>
  </div>
</div>
